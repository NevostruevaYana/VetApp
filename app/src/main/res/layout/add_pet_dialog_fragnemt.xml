<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Enter data about Your new pet"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:textColor="@color/cyan"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/reg_animal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal:   " />

                <EditText
                    android:id="@+id/reg_animal_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:textSize="12dp"
                    android:layout_marginRight="6dp"
                    android:fontFamily="monospace"
                    android:inputType="textPersonName"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/reg_pet_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_" />

                <EditText
                    android:id="@+id/reg_pet_name_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:inputType="textPersonName"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/reg_gender_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:   " />

                <EditText
                    android:id="@+id/reg_gender_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:layout_marginRight="6dp"
                    android:textSize="12dp"
                    android:fontFamily="monospace"
                    android:inputType="textPersonName"
                    android:hint="@string/male_femal"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/reg_date_of_birth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:   " />

                <EditText
                    android:id="@+id/reg_date_of_birth_pet_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:textSize="12dp"
                    android:fontFamily="monospace"
                    android:inputType="textPersonName"
                    android:hint="@string/dd_mm_yyyy"
                    android:layout_marginRight="40dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/reg_weight_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight:   " />

                <EditText
                    android:id="@+id/reg_weight_dialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:fontFamily="monospace"
                    android:inputType="textPersonName"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_marginRight="4dp"
                    android:hint="weight may be integer or \ndouble (use '.')"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_register_pet_dialog"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="serif-monospace"
                android:text="ADD"
                android:textSize="18sp"
                app:backgroundTint="@color/cyan" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>