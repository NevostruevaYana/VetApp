<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".PersonalClientAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:textColor="@color/cyan"
            android:text="@string/client_s_personal_account"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/full_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:fontFamily="monospace"
                android:textColor="@color/cyan"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/full_name_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/address_"
                android:fontFamily="monospace"
                android:textColor="@color/cyan" />

            <TextView
                android:id="@+id/address_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textColor="@color/cyan" />

            <TextView
                android:id="@+id/phone_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_marginLeft="15dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/regular_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regular_"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textColor="@color/cyan" />

            <TextView
                android:id="@+id/regular_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/my_pets_title"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="monospace"
            android:textColor="@color/cyan"
            android:text="MY PETS"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pet_column_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/client_id"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/cyan"/>

            <TextView
                android:id="@+id/pet_column_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/animal"
                android:textColor="@color/cyan"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pet_column_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/name"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/cyan"/>

            <TextView
                android:id="@+id/pet_column_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/gender"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/cyan"/>

            <TextView
                android:id="@+id/pet_column_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/date_of_birth_"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/cyan"/>

            <TextView
                android:id="@+id/pet_column_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/weight"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/cyan"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rw_client_pets"
            android:layout_width="match_parent"
            android:layout_height="230dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/add_pet"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/add_pet"
                android:layout_marginTop="8dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/check_all_my_visits"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="CHECK ALL MY VISITS"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/make_an_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_an_appointment"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>